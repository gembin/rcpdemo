<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.example.rcpdemo.layout.LayoutViewPart"
            icon="icons/shape_align_center.png"
            id="com.example.rcpdemo.layouts"
            name="Layouts"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.ralfebert.rcpdemo.perspective">
         <view
               id="com.example.rcpdemo.layouts"
               minimized="false"
               relationship="stack"
               relative="com.example.rcpdemo.update"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
